# Pywal themes

alias gruvbox="wal --theme gruvbox-dark"
alias nord="wal --theme base16-nord"
alias city="wal -i ~/Images/wallpapers/city07.jpg"
alias gray="wal --theme base16-grayscale"
alias dracula="wal --theme base16-dracula"
alias malkuth="wal --theme malkuth"
alias gotham="wal --theme sexy-gotham"

# Apps
alias vim="nvim"

# Scripts
alias bandcamp="campdown"

# Shortcuts
alias ls="lsd"
alias cal="cal -3"
alias d="dirs -v"
for index ({1..9}) alias "$index"="cd +${index}"; unset index
alias shsh="systemctl suspend"
alias audiodl="youtube-dl -f bestaudio --extract-audio --audio-format mp3 --audio-quality 0 --yes-playlist --add-metadata "
alias nnn="nnn -C"
alias selfie="mpv av://v4l2:/dev/video0 --profile=low-latency --untimed --vo=tct"

alias ..="cd .."
alias ...="cd .. && cd .."
alias ....="cd .. && cd .. && cd .."
